<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listitem_bg_bus"
    android:minHeight="50dp" >

    <ImageView
        android:id="@+id/listItemForecastKind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/bus_30_30" />

    <TextView
        android:id="@+id/listItemForecastRouteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/listItemForecastKind"
        android:text="123"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/listItemForecastRouteFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/listItemForecastRouteName"
        android:layout_toLeftOf="@+id/listItemForecastTime"
        android:text="АВТОБУСНАЯ СТАНЦИЯ УЛ. ЖЕНИ ЕГОРОВОЙ - ПОС. ПАРГОЛОВО, СПК ПРИГОРОДНЫЙ"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/listItemForecastTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:text="11:45"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp" />

</RelativeLayout>