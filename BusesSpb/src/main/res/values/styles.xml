<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/menu_bg</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="fb_share_btn">
		<item name="android:background">@drawable/share_facebook_btn_bg</item>
	</style>

    <style name="TopElement" parent="">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="AboutElement" parent="">
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="MapElement" parent="">
        <item name="android:layout_above">@+id/mainAdView</item>
    </style>

    <style name="LocationButton" parent="">
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <style name="BrowserElement" parent="">
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="AdsElement" parent="">
        <item name="android:background">@color/menu_bg</item>
    </style>

    <style name="UnderNavBarElement" parent="">
        <item name="android:layout_height">0dp</item>
    </style>

</resources>