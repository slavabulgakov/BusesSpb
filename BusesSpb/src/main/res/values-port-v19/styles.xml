<resources>
    <style name="AppTheme" parent="android:Theme.Holo.NoActionBar.TranslucentDecor">
        <item name="android:windowBackground">@color/menu_bg</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="TopElement" parent="">
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="AboutElement" parent="">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="RightElement" parent="">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="UnderNavBarElement" parent="">
        <item name="android:layout_height">45dp</item>
        <item name="android:minHeight">45dp</item>
    </style>

</resources>